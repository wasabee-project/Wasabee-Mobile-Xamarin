<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false">
    <targets>
        <target name="logfile"
                xsi:type="File"
                fileName="/data/user/0/rocks.wasabee.mobile/files/logs/WasabeeLogs.csv"
                archiveFileName="/data/data/rocks.wasabee.mobile/files/logs/archives/WasabeeLogs-{#}.csv"
                archiveEvery="Hour"
                archiveNumbering="Date"
                maxArchiveFiles="5"
                archiveDateFormat="yyyy-MM-dd-HH-mm"
                encoding="UTF-8">
            <layout xsi:type="CSVLayout">
                <quoting>All</quoting>
                <withHeader>true</withHeader>
                <delimiter>Comma</delimiter>
                <column name="time" layout="${longdate}" />
                <column name="logger" layout="${logger}"/>
                <column name="level" layout="${level}"/>
                <column name="message" layout="${message}" />
                <column name="stacktrace" layout="${exception:format=Type,Message,StackTrace,Data:maxInnerExceptionLevel=5}" />
            </layout>
        </target>
        <target xsi:type="Console" name="console" layout="${longdate} ${uppercase:${level}} ${message}" />
    </targets>
    <rules>
        <!-- Available LogLevels: Trace, Debug, Info, Warn, Error and Fatal -->

        <logger rulename="logfilelogger" name="WasabeeLogger" minlevel="Trace" writeTo="logfile" />

        <logger rulename="consolelogger" name="*" minlevel="Debug" writeTo="console" />
    </rules>
</nlog>